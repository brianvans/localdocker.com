!!! html
%html
  %head
    %meta{ :charset => "utf-8" }
    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "localdocker"
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{ :content => "IE=edge,chrome=1", 'http-equiv' => "X-UA-Compatible" }
    %meta{ :description => "If you're trying to access a local docker environment under OSX, this most definitely isn't it." }
    = stylesheet_link_tag "bootstrap"
    = javascript_include_tag  "all", "boostrap"
  %body
    = yield
